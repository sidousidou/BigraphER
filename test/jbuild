(jbuild_version 1)

(executables
 ((names (test_match test_decomp test_brs))
  (libraries (bigraph))
))

(alias
 ((name    runtest)
  (deps    (test_match.exe))
  (action  (run ${<} ${ROOT}/../../files ${ROOT}/../../shippable/testresults))
))

(alias
 ((name    runtest)
  (deps    (test_decomp.exe))
  (action  (run ${<} ${ROOT}/../../files/ ${ROOT}/../../shippable/testresults decomp-junit.xml))
))

(alias
 ((name    runtest)
  (deps    (test_brs.exe))
  (action  (run ${<} ${ROOT}/../../shippable/testresults brs-junit.xml))
))

