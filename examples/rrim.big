#Signature 
ctrl E = 1;
ctrl V = 2;
ctrl I = 0;
ctrl T = 0;
ctrl N = 2;

# Reaction rules
react new = 
  N{v, t} || E{t} || I
  -> 
  id  ||  E{t} || I.(V{v, t} |  id)  
  @ [0, 1, 1, 2];

# Initial state
big arch = E{t0}.1 | I.1 | T.1;

big rcfs = N{t0, v0}.1;

big sys = arch | rcfs;

# System
brs
  init sys;
  rules = [ { new } ];
endbrs


